  <div class="chat">
      <div class="chat-top">
        <div class="selected-room">hogefuga</div>
        <div class="close-chat"><a href="#">チャットを終了する</a></div>
      </div>
      <div class="chat-middle">
        <%= render partial: 'message', collection: @messages %>        
      </div>

      <%= form_with model: [@room, @message], html: {class: "form"}, local: true do |f|%>
        <div class="form-input">
          <%= f.text_field :content, class: 'message-text', placeholder: 'type a message' %>
          <label class="form-image">
            <span class="image-file">画像</span>
            <%= f.file_field :image, class: 'hidden' %>
          </label>
        </div>
        <%= f.submit '送信', class: 'send-button' %>
      <% end %>
  </div>